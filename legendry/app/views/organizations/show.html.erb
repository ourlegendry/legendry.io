<h1><%= @organization.name %></h1>
<h2>Specifications</h2>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% @specs.each do |spec| %>
    <tr>
      <td><%= spec.title %></td>
      <td><%= link_to 'Show', organization_specification_path(spec.organization, spec) %></td>
      <td><%= link_to 'Edit', edit_organization_specification_path(spec.organization, spec) %></td>
      <td>
        <%= link_to 'Delete',
          organization_specification_path(spec.organization, spec),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New specification', new_organization_specification_path(@organization) %>

<%= link_to "Back", organizations_path %>
