<h1><%= @spec.title %></h1>

<table>
  <tr>
    <th colspan=3></th>
  </tr>

  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.title %></td>
      <td><%= link_to 'Edit', edit_organization_specification_entry_path(@spec.organization, @spec, entry) %></td>
      <td>
        <%= link_to 'Delete',
          organization_specification_entry_path(@spec.organization, @spec, entry),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New entry', new_organization_specification_entry_path(@spec.organization, @spec) %>

<%= link_to "Back", organization_specifications_path(@spec.organization) %>
