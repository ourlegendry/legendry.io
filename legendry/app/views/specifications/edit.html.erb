<h1>Specification</h1>

<%= form_with(model: [@spec.organization, @spec], local: true) do |form| %>
  <% if @spec.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@spec.errors.count, "error") %>
        prohibited this organization from being saved:
      </h2>
      <ul>
        <% @spec.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Back", organization_specifications_path(@spec.organization) %>
