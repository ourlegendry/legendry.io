<h1>New Entry</h1>

<%= form_with scope: :entry, url: organization_specification_entries_path(@organization, @spec), local: true do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %>
        prohibited this organization from being saved:
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :number %><br>
    <%= text_field_tag 'temporary-number', @entry.number_description, disabled: true %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.hidden_field :parent_number %>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Back", organization_specifications_path(@spec.organization) %>
